char adresdetay[100][100];
void adresdetayvegidilecekyer(){
printf("\t\t\t\t\tAdresinizin detayini giriniz(sokak,mahalle vb.)\n");
    gets(adresdetay[0]);
    for(y=1;y>0;y++){
        rotamenusu();
        scanf("%d", &f);
        for(z=1;z>0;z++){
            if(f==1){
                avrupamenu();
                scanf("%d", &hjuy);
                printf("Ucret %d tl'dir", &ucret);
                printf("Aracin plakası %d dir", &m);
                printf("Soforun ismi %s dir");
                printf("Onaylamak icin evet(1) ye");
                printf("Vazgecmek için hayir(2) ye basiniz.");
                scanf("%d", &jh);
                if(jh==1){
                    printf("Araciniz yola cikmistir");
                }else if(jh==2){
                    printf("İslemden Vazgecilmistir");
                }else{
                    printf("Yanlis giris yaptiniz.");
                }
            }else if(f==2){
                asyamenu();
                scanf("%d", &hjuy);
                printf("Ucret %d tl'dir\n", ucret);
                printf("Aracin plakasi %d dir\n", &m);
                printf("Soforun ismi %s dir\n", &xc);
                printf("Onaylamak icin evet(e) ye\n");
                printf("Vazgecmek icin hayir(h) ye basiniz.\n");
                scanf("%s", &jh);
                if(jh==e){
                    printf("\t\t\t\t\tAraciniz yola cikmistir");
                }else if(jh==h){
                    printf("\t\t\t\t\tİslemden Vazgecilnistir");
                }else{
                    printf("\t\t\t\t\tYanlis giris yaptiniz.");
                }
            }else{
                printf("\t\t\t\t\tYanlis giris yaptiniz");
                rotamenusu();
                scanf("%d", &f);
            }
        }
    }
    }
void sonuctablosu(){
    printf("\t\t\t\t\tucret:%d tl\n", ucret);
    if(yujh==1 || 2){
        duurak=silivri;
    }else if(yujh==3 || 4){
        duurak=buyukcekmece;

    }else if(yujh==5 || 6){
        duurak=basaksehir;

    }else if(yujh==7 || 8){
        duurak=kucukcekmece;

    }else if(yujh==9 || 10 || 11 || 12 || 17){
        duurak=zeytinburnu;

    }else if(yujh==13){
        duurak=fatih;

    }else if(yujh==14){
        duurak=beyoglu;

    }else if(yujh==15 || 16){
        duurak=besiktas;

    }

    printf("\t\t\t\t\tTaksiyi istiyorsaniz(1)'e\n");
    printf("\t\t\t\t\tistemiyorsaniz (2)'ye basiniz\n");
    scanf("%d", &onay);
    if(onay==1){
        printf("\t\t\t\t\tTaksiniz yola cikmistir\n");
        printf("\t\t\t\t\tKonumunuza en yakin duraktan ilk siradaki sofor gonderilecektir\n");
        printf("\t\t\t\t\tdurak ve sofor profillerini ana menuden inceleyebilirsiniz\n");
        printf("\t\t\t\t\tcikis icin bir sayiya basiniz\n");
        scanf("%d", &cikis);

    }else if(onay==2){
        printf("\t\t\t\t\tisleminiz iptal edilmistir\n");
        printf("\t\t\t\t\tcikis icin bir sayiya basiniz\n");
        scanf("%d", &cikis);

    }



    }
